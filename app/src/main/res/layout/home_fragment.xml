<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeFragment"
    android:background="@drawable/bigcasataminango">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="70dp"
            android:paddingVertical="60dp">

            <Button
                android:id="@+id/btnwifi"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:background="@drawable/buttonshape"
                android:drawableStart="@drawable/ic_wifi_black_48dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="Sitios wifi Pasto"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:typeface="normal"
                android:drawableLeft="@drawable/ic_wifi_black_48dp" />

            <Button
                android:id="@+id/btnculturales"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_above="@+id/btnwifi"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonshape"
                android:drawableStart="@drawable/ic_whatshot_black_24dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="Sitios culturales"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnmapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonshape"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="Mapa"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>